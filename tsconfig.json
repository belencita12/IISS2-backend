{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@lib/*": ["src/lib/*"],
			"@config/*": ["src/config/*"],
			"@decorators/*": ["src/lib/decorators/*"],
			"@commons/*": ["src/lib/commons/*"],
			"@test-lib/*": ["test/lib/*"]
		},
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"noFallthroughCasesInSwitch": false
	}
}
