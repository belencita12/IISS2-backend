model Tag {
  id        Int          @id @default(autoincrement())
  name      String       @unique
  taggables ProductTag[]
}

model ProductTag {
  id        Int     @id @default(autoincrement())
  tagId     Int
  tag       Tag     @relation(fields: [tagId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}